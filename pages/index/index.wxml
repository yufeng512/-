<view wx:if="{{show}}">
  <view class="header-box">
    <image mode="widthFix" src="https://booking.benefitbrows.cn/benefit_xcx/statics/images/head-img.png"></image>
  </view>
  <view class="warpper">
    <view class="swiper-up">
      <swiper class="swiper" vertical="{{true}}" bindchange="bindSwiperChange">
        <block>
          <swiper-item >
            <image mode="widthFix" src=""></image>
          </swiper-item>
          <swiper-item>
            <image mode="widthFix" src=""></image>
          </swiper-item>
          <swiper-item>
            <image mode="widthFix" src=""></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="img-box">
      <image mode="widthFix" lazy-load="{{true}}" src="{{borderImg}}"></image>
    </view>
    <view class="show-box">
      <image mode="widthFix" lazy-load="{{true}}" src="{{imgList[severIndex]}}"></image>
    </view>
    <view class="content">
      <view class="item flex-start">
        <view class="item-img"><image mode="widthFix" src="/images/select-service.png"></image></view>
        <view class="select-box">
          <!-- <picker bindchange="bindServeChange" mode="selector" range-key="{{'serviceName'}}" value="{{severIndex}}" range="{{serverList}}"> -->
            <!-- <view class="picker">{{serverList[severIndex].serviceName}}</view> -->
            <view class="picker">滑动图片选择服务</view>
          <!-- </picker> -->
        </view>
      </view>
      <view bindtap='goOrderInfo'>
        <image mode="widthFix" src="{{imgUrl+'liji-btn.png'}}"></image>
      </view>
    </view>
  </view>
</view>