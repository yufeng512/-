page{
  overflow: hidden;
}
.warpper{
  position: relative;
  width: 100vw;
}
.warpper .img-box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 3;
  overflow: hidden;
}
.warpper .swiper-up .swiper{
  position: absolute;
  left: 20vw;
  top: 100rpx;
  width: 60vw;
  height: 600rpx;
  z-index: 4;
}
.warpper .swiper-up .swiper image{
  visibility: hidden
}
.warpper .show-box{
  position: absolute;
  left: 20vw;
  top: 100rpx;
  width: 60vw;
  height: 660rpx;
  z-index: 2;
}
.warpper .content{
  position: absolute;
  width: 100vw;
  padding: 0 28vw;
  top: 760rpx;
  z-index: 5;
}
.item{
  margin: 20rpx 5vw 0;
  padding: 10rpx 0 5rpx;
}
.item .item-img{
  width: 30rpx;
  margin: 0 10rpx;
  flex: 0 1 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item .item-img image{
  width: 24rpx;
}
.item .select-box{
  flex: 1 1 auto;
  font-size: 24rpx;
  text-align: center;
  color: #000000;
}
.item .select-box .picker{
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bolder
}